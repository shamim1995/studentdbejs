
    
   <div class="container my-5">
        <div class="row justify-content-center ">
            <div class="col-md-8">
                <a class="btn btn-primary" href="/student/add">Add New Student</a>
                <br>
                <br>
                <table class="table table-striped text-center table-dark shadow-lg">
                    <thead>
                        <tr>
                            <th>Sl</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Location</th>
                            <th>Skill</th>
                            <th>Cell</th>
                            <th>Photo</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        
                        <% studentData.forEach( (element, index) => { %>
                            
                         <tr>
                             <td><%= index+1 %> </td>
                             <td><%= element.name %> </td>
                             <td><%= element.email %> </td>
                             <td><%= element.location %></td>
                             <td><%= element.skill %></td>
                             <td><%= element.cell %></td>
                             <td> <img style="width:50px; height:50px; object-fit:cover "
                                     src="/assets/upload/<%= element.photo %>" alt=""> </td>
                             <td>
                                 <a class="btn btn-info btn-sm" href="/student/<%=element._id %> "> <i class="fas fa-eye"></i> </a>
                                 <a class="btn btn-warning btn-sm" href="/student/edit/<%=element._id %>"> <i class="fas fa-edit"></i> </a>
                                 <a class="btn btn-danger btn-sm" href="/student/delete/<%=element._id %>"> <i class="fas fa-trash"></i> </a>
                             </td>
                         </tr>
                        <% }) %>
                    </tbody>

                </table>
            </div>
        </div>
   </div>
   



